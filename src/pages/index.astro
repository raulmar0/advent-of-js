---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import PomodoroThumbnail from '../assets/img/pomodoro-timer.webp'
---

<style>
  .card-link {
    text-decoration: none;
  }

  .thumbnail {
    width: 100%;
    height: 100%;
    object-fit: cover;
    margin-top: 30px;
    border-radius: 10px;
  }

</style>

<DefaultLayout title="Home">
  <section class="margin-48">
    <div class="container">
      <h1>Advent of JavaScript 2022</h1><br>
      <h4>Raulmar's answers to the daily JS challenges</h4>
    </div>
  </section>
  <section class="padding-48 color-primary">
    <div class="container">
      <h2 class="margin-16 bottom">Click to test the demos</h2>
    </div>
    <div class="container" data-auto-grid="3">
      <a class="card-link" href="/advent-of-js/pomodoro">
        <div class="text-neutral-100 bg-neutral-900 space-32 radius-large elevation-500" data-animation="fade-in">
          <h3>Pomodoro Timer</h3>
          <p>Day 1</p>
          <!-- <img class="thumbnail" src={PomodoroThumbnail} /> -->
        </div>
      </a>
      <a class="card-link" href="/advent-of-js/cart">
        <div class="text-neutral-100 bg-neutral-900 space-32 radius-large elevation-500" data-animation="fade-in" data-animation-delay="0.25s">
          <h3>Ecommerce Cart</h3>
          <p>Day 2</p>
        </div>
      </a>
      <a class="card-link" href="/advent-of-js/piano">
